<?xml version="1.0" encoding="utf-8"?>
<com.pichs.common.widget.cardview.XCardConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/x_popup_menu_item_root"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.pichs.common.widget.view.XImageView
            android:id="@+id/x_popup_menu_item_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:padding="6dp"
            android:src="#f00" />

        <com.pichs.common.widget.view.XTextView
            android:id="@+id/x_popup_menu_item_text"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="案件司法局"
            android:textColor="#333333"
            android:textSize="14sp" />

    </LinearLayout>


    <com.pichs.common.widget.view.XView
        android:id="@+id/x_popup_menu_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888888"
        app:layout_constraintBottom_toBottomOf="parent" />

</com.pichs.common.widget.cardview.XCardConstraintLayout>