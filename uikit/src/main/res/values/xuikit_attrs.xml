<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  通用条目View  -->
    <declare-styleable name="CommonItemView">
        <!--    基础属性    -->
        <attr name="common_icon" format="reference|color" />
        <attr name="common_arrow_visible" format="boolean" />
        <attr name="common_title_text" format="string|reference" />
        <attr name="common_sub_text" format="string|reference" />
        <!--    text size    -->
        <attr name="common_title_textSize" format="dimension" />
        <attr name="common_sub_text_textSize" format="dimension" />
        <!--    text style    -->
        <attr name="common_title_textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="common_sub_text_textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <!--    color    -->
        <attr name="common_icon_colorFilter" format="color|reference" />
        <attr name="common_arrow_colorFilter" format="color|reference" />
        <attr name="common_title_textColor" format="color|reference" />
        <attr name="common_sub_text_textColor" format="color|reference" />

        <!--   margin配置     -->
        <attr name="common_icon_marginEnd" format="dimension" />
        <attr name="common_icon_marginStart" format="dimension" />
        <attr name="common_title_text_marginStart" format="dimension" />
        <attr name="common_sub_text_marginEnd" format="dimension" />
        <attr name="common_arrow_marginEnd" format="dimension" />

        <!--   switcher     -->
        <attr name="common_switcher_marginEnd" format="dimension" />
        <attr name="common_switcher_bgColor_switchOn" format="color" />
        <attr name="common_switcher_bgColor_switchOff" format="color" />
        <attr name="common_switcher_iconColor_switch" format="color" />
        <attr name="common_switcher_height" format="dimension" />
        <attr name="common_switcher_width" format="dimension" />
        <attr name="common_switcher_visible" format="boolean" />
    </declare-styleable>

    <!--  模块标题头  -->
    <declare-styleable name="CommonSection">
        <attr name="xp_section_titleIcon" format="color|reference" />
        <attr name="xp_section_moreIcon" format="color|reference" />
        <attr name="xp_section_titleText" format="string" />
        <attr name="xp_section_titleText_ignoreTypeface" format="boolean" />
        <attr name="xp_section_moreText_ignoreTypeface" format="boolean" />
        <attr name="xp_section_moreText" format="string" />
        <attr name="xp_section_titleIconRadius" format="dimension" />
        <attr name="xp_section_moreIconRadius" format="dimension" />
        <attr name="xp_section_titleIconMarginStart" format="dimension" />
        <attr name="xp_section_titleIconMarginEnd" format="dimension" />
        <attr name="xp_section_titleIconWidth" format="dimension" />
        <attr name="xp_section_titleIconHeight" format="dimension" />
        <attr name="xp_section_titleTextMarginStart" format="dimension" />
        <attr name="xp_section_moreTextMarginEnd" format="dimension" />
        <attr name="xp_section_moreIconMarginEnd" format="dimension" />
        <attr name="xp_section_moreIconMarginStart" format="dimension" />
        <attr name="xp_section_moreIconWidth" format="dimension" />
        <attr name="xp_section_moreIconHeight" format="dimension" />
        <attr name="xp_section_titleIconPadding" format="dimension" />
        <attr name="xp_section_moreIconPadding" format="dimension" />
        <attr name="xp_section_titleIconBgStartColor" format="color" />
        <attr name="xp_section_titleIconColorFilter" format="color" />
        <attr name="xp_section_titleIconBgColorOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="xp_section_titleIconBgEndColor" format="color" />
        <attr name="xp_section_titleIconBgColor" format="color" />
        <attr name="xp_section_moreIconBgStartColor" format="color" />
        <attr name="xp_section_moreIconColorFilter" format="color" />
        <attr name="xp_section_moreIconBgEndColor" format="color" />
        <attr name="xp_section_moreIconBgColor" format="color" />
        <attr name="xp_section_moreIconBgColorOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="xp_section_titleTextColor" format="color" />
        <attr name="xp_section_titleTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="xp_section_moreTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="xp_section_titleTextSize" format="dimension" />
        <attr name="xp_section_moreTextColor" format="color" />
        <attr name="xp_section_moreTextSize" format="dimension" />
    </declare-styleable>


    <!--  索引view  -->
    <declare-styleable name="WaveSideBar">
        <attr name="sidebar_lazy_respond" format="boolean" />
        <attr name="sidebar_text_size" format="dimension" />
        <attr name="sidebar_text_color" format="color" />
        <attr name="sidebar_max_offset" format="dimension" />
        <attr name="sidebar_position" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="sidebar_text_alignment" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

</resources>